---
// EXAMPLE: Modified [id].astro to support animated covers
import { getCollection, render } from "astro:content";
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import BackBtn from "@/components/BackBtn.astro";
import BackToTop from "../../components/BackToTop.astro";

// Import animation components
import RoboticsAnimation from '@/components/RoboticsAnimation.astro';
import DallasAnimation from '@/components/DallasAnimation.astro';

export async function getStaticPaths() {
    const posts = await getCollection('projects');
    return posts.map(post => ({
        params: { id: post.id },
        props: { post },
    }));
}

const { post } = Astro.props;
const { 
    title, 
    summary, 
    tags, 
    cover, 
    ogImage, 
    url,
    useAnimatedCover = false,
    animatedCoverComponent = null,
    animatedCoverSeed = 42
} = post.data;

const { Content } = await render(post);
---

<Layout title={title} description={summary} imageOg={ogImage} scrollSmooth={true}>
    <>
        <div class="flex justify-center mt-10">
            <BackBtn/>
        </div>
        <div class="flex flex-col gap-6 justify-center items-center">
            <h1 class="text-3xl font-bold text-center">{title}</h1>
            <p class="text-sm text-n500 dark:text-primary-light ">
                {tags.join(', ')}
            </p>
        </div>
        
        <!-- Conditional Cover Rendering -->
        {useAnimatedCover ? (
            <div class="animated-cover-wrapper">
                {animatedCoverComponent === 'RoboticsAnimation' ? (
                    <RoboticsAnimation seed={animatedCoverSeed} />
                ) : animatedCoverComponent === 'DallasAnimation' ? (
                    <DallasAnimation seed={animatedCoverSeed} />
                ) : (
                    <Image transition:name={`${post.id}-image`} class="rounded-2xl" src={cover} alt="Main project image"/>
                )}
            </div>
        ) : (
            <Image transition:name={`${post.id}-image`} class="rounded-2xl" src={cover} alt="Main project image"/>
        )}

        <p>{summary}</p>
        
        {url && (
            <a href={url}>
                Visit the project â†—
            </a>
        )}

        <article id="article" class="mt-8 prose dark:prose-invert">
            <Content/>
        </article>
        <BackToTop />
    </>
</Layout>

<style is:global>
    h2 {
        @apply text-2xl font-bold my-4;
    }
    
    .animated-cover-wrapper {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }
</style>
