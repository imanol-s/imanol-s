---
import {ClientRouter} from 'astro:transitions';
import '@/styles/globals.css';

import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import TopoBackground from "../components/TopoBackground.tsx";
import LoadingOverlay from "../components/LoadingOverlay.tsx";

import {SITE} from '@/config';

interface Props {
    title?: string;
    scrollSmooth?: boolean;
    description?: string;
    tags?: string[];
    author?: string;
    imageOg?: string;
    canonicalURL?: string;
}

const {
    title = SITE.title,
    description = SITE.description,
    tags = SITE.tags,
    author = SITE.author,
    scrollSmooth = false,
    canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
    imageOg = SITE.ogImage,
} = Astro.props;
---

<!doctype html>
<html lang={SITE.lang ?? "en"} class={`dark bg-[var(--color-background-dark)]${scrollSmooth ? " scroll-smooth" : ""}`}>
<head>
    <meta name="msapplication-TileColor" content="#000000"/>
    <meta name="viewport" content="width=device-width"/>
    <meta charset="UTF-8"/>
    <meta name="generator" content={Astro.generator}/>

    <meta name="title" content={title}/>
    <meta name="description" content={description}/>
    <meta name="keywords" content={tags.join(', ')}/>
    <meta name="author" content={author}/>
    <link rel="sitemap" href="/sitemap-index.xml"/>
    <link rel="icon" href={SITE.favicon}/>
    <link rel="canonical" href={canonicalURL}/>

    <!-- Font preloads -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;700&display=swap" rel="stylesheet" />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title}/>
    <meta property="og:description" content={description}/>
    <meta property="og:url" content={canonicalURL}/>
    <meta property="og:image" content={imageOg}/>
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image"/>
    <meta property="twitter:url" content={canonicalURL}/>
    <meta property="twitter:title" content={title}/>
    <meta property="twitter:description" content={description}/>
    <meta property="twitter:image" content={imageOg}/>

    <title>{title}</title>
    <ClientRouter/>
</head>
<body class="min-h-screen bg-transparent font-body text-slate-800 dark:text-slate-200 transition-colors duration-300 selection:bg-primary selection:text-white">

<script is:inline>
  document.documentElement.classList.add('dark');
</script>

<LoadingOverlay client:load />
<TopoBackground client:only="react" />
<div class="fixed inset-0 z-[2] pointer-events-none bg-[var(--color-background-dark)]/50" aria-hidden="true"></div>
<SiteHeader />

<main class="relative z-10 max-w-7xl mx-auto px-6 py-12">
    <slot/>
</main>

<SiteFooter />
</body>
</html>
