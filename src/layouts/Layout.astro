---
import {ClientRouter} from 'astro:transitions';
import {cn} from "../lib/utils";
import '@/styles/globals.css'

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import CommandPalette from "@/components/CommandPalette.astro";
import CommandPaletteHint from "@/components/CommandPaletteHint.astro";

import {SITE} from '@/config';

interface Props {
    title?: string;
    scrollSmooth: boolean;
    widthMode?: 'reading' | 'standard' | 'wide';
    description?: string;
    tags?: string[];
    author?: string;
    imageOg?: string;
    canonicalURL?: string;
}

const {
    title = SITE.title,
    description = SITE.description,
    tags = SITE.tags,
    author = SITE.author,
    scrollSmooth,
    widthMode = 'standard',
    canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
    imageOg = SITE.ogImage,
} = Astro.props;

const widthModeClass = {
    reading: 'max-w-layout-reading',
    standard: 'max-w-layout-standard',
    wide: 'max-w-layout-wide',
} as const;
---

<!doctype html>
<html lang={SITE.lang ?? "en"} class={cn({"scroll-smooth": scrollSmooth})}>
<head>
    <meta name="msapplication-TileColor" content="#000000"/>
    <meta name="viewport" content="width=device-width"/>
    <meta charset="UTF-8"/>
    <meta name="generator" content={Astro.generator}/>

    <meta name="title" content={title}/>
    <meta name="description" content={description}/>
    <meta name="keywords" content={tags.join(', ')}/>
    <meta name="author" content={author}/>
    <link rel="sitemap" href="/sitemap-index.xml"/>
    <link rel="icon" href={SITE.favicon}/>
    <link rel="canonical" href={canonicalURL}/>

    <!-- Preconnect to external domains for faster resource loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin="anonymous"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous"/>

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title}/>
    <meta property="og:description" content={description}/>
    <meta property="og:url" content={canonicalURL}/>
    <meta property="og:image" content={imageOg}/>
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image"/>
    <meta property="twitter:url" content={canonicalURL}/>
    <meta property="twitter:title" content={title}/>
    <meta property="twitter:description" content={description}/>
    <meta property="twitter:image" content={imageOg}/>

    <title>{title}</title>
    <ClientRouter/>
</head>
<body class="bg-light-theme dark:bg-dark-theme antialiased text-n700 dark:text-light-theme w-full h-screen flex flex-col">
<Navbar/>
<main class={cn("w-full mx-auto px-4 sm:px-6 lg:px-8 py-24 flex gap-8 flex-col", widthModeClass[widthMode])} role="main"  id="top">
    <slot/>
</main>
<CommandPalette />
<CommandPaletteHint />
<form name="growth-events" data-netlify="true" netlify-honeypot="bot-field" hidden>
    <input type="hidden" name="form-name" value="growth-events"/>
    <input type="text" name="event"/>
    <input type="text" name="path"/>
    <input type="text" name="content_id"/>
    <input type="text" name="method"/>
    <input type="text" name="utm_source"/>
    <input type="text" name="utm_medium"/>
    <input type="text" name="timestamp"/>
</form>
<Footer/>
</body>
</html>
