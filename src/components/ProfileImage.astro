---
// library imports
import type {ImageMetadata} from 'astro';
import {Image} from 'astro:assets';

// config import
import {ME} from '@/config';

// Dynamically import image with eager loading for better performance
// Eager loading ensures the image is bundled at build time
const imageName = ME.profileImage;
const imagePath = `/src/assets/${imageName}`;

// Use eager loading to optimize build performance
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif}', { eager: true });

/* Throw error if image does not exist */
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
---

<Image
        class="rounded-full w-[130px] md:w-[140px] object-cover"
        src={images[imagePath].default}
        alt="profile avatar"
        loading="eager"
        fetchpriority="high"
        decoding="async"
        widths={[130, 140, 260, 280]}
        sizes="(max-width: 768px) 130px, 140px"
/>