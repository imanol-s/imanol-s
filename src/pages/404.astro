---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 Not Found" description="The page you're looking for cannot be found." scrollSmooth={false}>
  <div class="text-center py-32">
    <p class="font-display text-xs text-primary uppercase tracking-widest mb-4">
      404
    </p>
    <h1 class="text-3xl font-display font-bold mb-6">
      Page not found
    </h1>
    <a
      href="/"
      class="cta-primary inline-flex items-center gap-2 focus-ring"
    >
      &larr; Back to home
    </a>
  </div>
</Layout>
