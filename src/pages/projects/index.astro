---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const allProjects = (await getCollection('projects'))
  .sort((a, b) => b.data.startDate.getTime() - a.data.startDate.getTime());
---

<Layout title="Imanol | Projects" description="A list of my projects" scrollSmooth={false}>
  <section class="mb-8">
    <h1 class="text-3xl font-display font-bold mb-2">PROJECTS</h1>
    <p class="text-slate-500 font-display text-sm">{allProjects.length} projects</p>
  </section>

  <section class="flex flex-col gap-8">
    {allProjects.length === 0 && (
      <p class="text-slate-500 font-display text-sm">No projects found.</p>
    )}
    {allProjects.map((project) => (
      <a
        href={`/projects/${project.id}`}
        class="group flex flex-col md:flex-row md:items-center gap-6 p-4 cad-border bg-slate-50 dark:bg-slate-900 hover:bg-white dark:hover:bg-slate-800 transition-colors"
        aria-label={`View project "${project.data.title}"`}
      >
        <div class="h-[200px] md:w-[200px] md:h-[140px] flex-none overflow-hidden">
          <Image
            src={project.data.cover}
            alt={`Cover for ${project.data.title}`}
            class="object-cover w-full h-full grayscale opacity-60 group-hover:scale-105 transition-transform duration-700"
            width={200}
            height={140}
          />
        </div>
        <div class="flex flex-col gap-2 flex-1">
          <p class="text-xs text-slate-500 font-display">
            {project.data.tags.join(' / ')}
          </p>
          <h2 class="font-bold text-xl text-slate-900 dark:text-white group-hover:text-primary transition-colors">
            {project.data.title}
          </h2>
          <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
            {project.data.summary}
          </p>
        </div>
      </a>
    ))}
  </section>
</Layout>
